@model CafeComFormacao.Models.Cadastro
@{
    ViewData["Title"] = "Café com Formação";
}
<div class="container-fluid mx-auto mt-xxl-5">
    <form asp-controller="Participante" asp-action="CriarParticipante">
        @Html.AntiForgeryToken()
        <h1 class="text-center">Inscreva-se já!</h1>
        <div class="form-group mt-lg-5">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control" placeholder="Seu nome">
            <div class=" mt-2"><span class="alert-danger" asp-validation-for="Nome"></span></div>
        </div>
        <div class="form-group mt-lg-3">
            <label asp-for="Email" class="control-label"></label>
            <input id="email"  asp-for="Email" class="form-control" placeholder="Seu email">
            <div class="mt-2"><span class="alert-danger" id="mensagemEmail" asp-validation-for="Email"></span></div>
        </div>
        <div class="form-group mt-lg-3">
            <label asp-for="Celular" class="control-label"></label>
            <input id="celular" asp-for="Celular" class="form-control" placeholder="Seu telefone">
            <div class="mt-2"><span class="alert-danger" id="mensagemCelular" asp-validation-for="Celular"></span></div>
        </div>
        <div class="form-group mt-lg-3">
            <label asp-for="Senha" class="control-label"></label>
            <input id="senha" asp-for="Senha" type="password" class="form-control" placeholder="Cadastre uma senha">
            <div class="mt-2"><span class="alert-danger" asp-validation-for="Senha"></span></div>
        </div>
        <div class="form-group mt-lg-3">
            <label asp-for="ConfirmarSenha" class="control-label"></label>
            <input id="confirmarSenha" asp-for="ConfirmarSenha" type="password" class="form-control" placeholder="Confirme a senha que você deseja cadastrar">
            <div class="mt-2"><span class="alert-danger" asp-validation-for="ConfirmarSenha"></span></div>
        </div>
        <div class="form-group form-check mt-lg-3">
            <input asp-for="CursoLidere" type="checkbox" class="form-check-input">
            <label asp-for="CursoLidere" class="form-check-label">Você possui algum interesse em obter algum curso do instituto Lidere?</label>
        </div>
        <button id="botaoEnviar" type="submit" class="btn btn-success mt-3">Cadastrar-se</button>
    </form>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            ajaxCadastro();
        });
    </script>
}

