@{
    ViewData["Title"] = "Café com Formação";
}
<div class="toast-container mx-auto mt-xxl-5">
    <form>
        <h1 class="text-center">Inscreva-se já!</h1>
        <div class="form-group mt-lg-5">
            <label for="InputNome">Nome</label>
            <input type="email" class="form-control" id="InputNome" placeholder="Seu nome">
        </div>
        <div class="form-group mt-lg-3">
            <label for="InputEmail1">Endereço de email</label>
            <input type="email" class="form-control" id="InputEmail1"  placeholder="Seu email">
        </div>
        <div class="form-group mt-lg-3">
            <label for="celular">Telefone</label>
            <input type="password" class="form-control" id="celular" placeholder="Seu telefone">
        </div>
        <div class="form-group mt-lg-3">
            <label for="exampleInputPassword1">Senha</label>
            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Cadastre uma senha">
        </div>
        <div class="form-group form-check mt-lg-3">
            <input type="checkbox" class="form-check-input" id="exampleCheck1">
            <label class="form-check-label" for="exampleCheck1">Deseja adquirir um curso do instituto lidere?</label>
        </div>
        <button type="submit" class="btn btn-success mt-3">Enviar</button>
    </form>
</div>

