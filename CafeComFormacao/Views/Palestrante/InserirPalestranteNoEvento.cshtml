@model CafeComFormacao.Models.ViewsModels

@{
    ViewData["Title"] = "Palestrantes";
    ViewBag.MostrarCabecalho = false;
}


<div>
    <div>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>Telefone De Contato</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Palestrante palestrante in Model.ListaPalestrante)
                {
                    <tr>
                        <td>@palestrante.Id</td>
                        <td>@palestrante.Nome</td>
                        <td>@palestrante.Email</td>
                        <td>@palestrante.TelefoneDeContato</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="container-fluid mx-auto mt-xxl-5">
        <form asp-controller="Palestrante" asp-action="CadastrarPalestranteNoEvento" method="post">
            @Html.AntiForgeryToken()
            <h1 class="text-center">Adicionar palestrante a um evento:</h1>
            <select class="form-control custom-select multiple" name="eventoId">
                @foreach (Evento evento in Model.ListaDeEventos)
                {
                    <option value="@evento.Id">@Html.DisplayFor(x => evento.NomeDoEvento)</option>
                }
            </select>
            <div class="form-group mt-lg-5">
                <label class="control-label"></label>
                <input name="palestranteId" class="form-control" placeholder="Id do participante que você quer adicionar ao evento">
            </div>
            <button id="botaoEnviar" type="submit" class="btn btn-success mt-3">Adicionar</button>
        </form>
    </div>
</div>

